{
  "name": "port-magazine",
  "version": "1.0.0",
  "private": true,
  "description": "Port Magazine - Monorepo 项目",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{vue,js,jsx,ts,tsx,json,css,scss,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "web:dev": "pnpm --filter @port/web dev",
    "admin:dev": "pnpm --filter @port/admin dev",
    "api:dev": "pnpm --filter @port/api dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
